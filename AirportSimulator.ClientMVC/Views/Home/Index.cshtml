@using AirportSimulator.Services.ModelsDTO;
@model AirportDTO;
@{
    ViewData["Title"] = "Home Page";
}
<div id="dataContainer">

    <div class="text-center ">
        <h2 class="display-4 col-lg-12">Welcome Airport Simulator</h2>
        <div class="row col-lg-12 ">

            @if (Model.Stations != null)
            {
                <div class="col-lg-8" id="airport-map-section">
                <partial name="~/Views/Home/_AirportMapPartial.cshtml" model=Model.Stations />
                </div>
            }

            @if (Model.Planes != null)
            {
                <div class ="col-lg-4" id="airport-planes" model="@Model.Planes">
                        <h3>Flights in Airport:</h3>

                    @foreach (var plane in Model.Planes)
                    {
                        if (plane.CurrentStation != 0)
                        {
                            <h4 class="@plane.Status.ToString().ToLower()">@plane.FlightNumber : Station @plane.CurrentStation : @plane.Status</h4>
                        }
                    }
                </div>
                <button id="updateButton">Start Simulator</button>
            }
            else
            {
                <h4 class="col-lg-12">Airport Empty. Try Again!</h4>
            }
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


